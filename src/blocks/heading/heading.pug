//- Все примеси в этом файле должны начинаться c имени блока (heading)

mixin heading(tag, title, text, mods)

  //- Принимает:
  //-   tag     {string} - тэг
  //-   title   {string} - заголовок
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +heading('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' heading--' + modsList[i].trim();
      }
    }

  .heading(class=allMods)&attributes(attributes)
    #{tag}.heading__title!= title
    if (text)
      .heading__text!= text
