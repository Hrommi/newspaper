//- Все примеси в этом файле должны начинаться c имени блока (buttons)

mixin buttons(mods)

  //- Принимает:
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +buttons('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' buttons--' + modsList[i].trim();
      }
    }

  .buttons(class=allMods)&attributes(attributes)
    .buttons__inner
      block
