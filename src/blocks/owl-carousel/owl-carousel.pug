//- Все примеси в этом файле должны начинаться c имени блока (owl-carousel)

mixin owl-carousel(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +owl-carousel('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' owl-carousel--' + modsList[i].trim();
      }
    }

  .owl-carousel.owl-theme(class=allMods)&attributes(attributes)
    block
